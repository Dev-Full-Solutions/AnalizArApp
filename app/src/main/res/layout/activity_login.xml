    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:backgroundTint="@color/verde"
        android:contentDescription="Boton de Login"
        android:fontFamily="@font/roboto_bold"
        android:text="ACCEDER"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:backgroundTint="@null"
        android:contentDescription="Boton de Olvidaste tu Contrase単a"
        android:fontFamily="@font/roboto_bold"
        android:onClick="olvideContrasena"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:shadowColor="@null"
        android:text="Olvidaste tu contrase単a?"
        android:textColor="@color/azul"
        android:textColorLink="@color/verde_oscuro"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Icono representante de usuario"
        app:layout_constraintBottom_toBottomOf="@+id/inputUsuario"
        app:layout_constraintEnd_toEndOf="@+id/inputUsuario"
        app:layout_constraintTop_toTopOf="@+id/inputUsuario"
        app:srcCompat="@drawable/perfil" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Icono representante de contrase単a"
        app:layout_constraintBottom_toBottomOf="@+id/inputPassword"
        app:layout_constraintEnd_toEndOf="@+id/inputPassword"
        app:layout_constraintTop_toTopOf="@+id/inputPassword"
        app:srcCompat="@drawable/contrase_a" />
</androidx.constraintlayout.widget.ConstraintLayout>